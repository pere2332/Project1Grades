<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/course_list"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="82dp"
        android:layout_marginBottom="21dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/add_course"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="15dp"
        android:text="Add Course"
        app:layout_constraintBottom_toTopOf="@+id/return_to_main"
        app:layout_constraintStart_toStartOf="@+id/return_to_main"
        app:layout_constraintTop_toBottomOf="@+id/course_list" />

    <Button
        android:id="@+id/return_to_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:text="Return to Main Menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_course" />
</androidx.constraintlayout.widget.ConstraintLayout>